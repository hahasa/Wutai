<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tv_btn">
        <item name="android:background">@drawable/rectangle_4dp_3f51b5</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:paddingBottom">@dimen/space_5</item>
        <item name="android:paddingTop">@dimen/space_5</item>
        <item name="android:paddingStart">@dimen/space_10</item>
        <item name="android:paddingEnd">@dimen/space_10</item>
    </style>

    <style name="tv_text">
        <item name="android:background">@color/color_b8b8b8</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:padding">@dimen/space_5</item>
    </style>

    <style name="tab_layout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMinWidth">0dp</item>
        <item name="tabTextAppearance">@style/text_42999999</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <style name="text_42999999">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

    <style name="text_42333333">
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>

</resources>
